# Attach to a detached session. If none is available create a new one, rather
# than attach to one that is already attached to elsewhere.
super + Return
	$TERMINAL

super + shift + e
	$EDITOR

super + shift + w
	$BROWSER

# ctrl + super + Return
# 	alacritty

super + grave
	scratch

super + shift + grave
	emacsclient -e '(open-scratch-frame)'

# super + space
# 	$DOTFILES/bin/rofi/appmenu

# super + Tab
# 	$DOTFILES/bin/rofi/windowmenu

super + b
	$DOTFILES/bin/rofi/rofi-bluetooth

super + p
	$DOTFILES/bin/rofi/rofi-pass --last-used

# super + slash
# 	$DOTFILES/bin/rofi/filemenu -x

super + Escape
	pkill -USR1 -x sxhkd
